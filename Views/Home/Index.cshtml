@using RocketElevator.Utils;
@{
    var user = Context.Session.GetObjectFromJson<RocketElevator.Models.Users>("user");
}

<!-- SLIDER -->
<section id="slider" class="fullheight">

    <div class="swiper-container" data-effect="slide" data-autoplay="false">
        <div class="swiper-wrapper">

            <!-- SLIDE 1 -->
            <div class="swiper-slide" style="background-image: url('/../../Assets/pexels-emiliano-fanti-2363520.jpg');">
                <div class="overlay dark-5"><!-- dark overlay [1 to 9 opacity] --></div>

                <div class="display-table">
                    <div class="display-table-cell vertical-align-middle">
                        <div class="container">

                            <div class="row">
                                <div class="text-center col-md-8 col-12 offset-md-2">

                                    <h1 class="bold font-raleway wow fadeInUp" data-wow-delay="0.4s">WELCOME</h1>
                                    <p class="lead font-lato fw-300 hidden-xs-down wow fadeInUp">
                                        @if (Context.Session.IsAvailable && user != null)
                                        {
                                           
                                            <h4 data-wow-delay="0.4s">@user.FirstName!</h4>
                                        }
                                    </p>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
            <!-- /SLIDE 1 -->



        </div>


    </div>

</section>

